<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- 启用springMVC相关注解 -->
    <context:annotation-config/>
    <!-- 启用springMVC注解扫描路径 -->
    <context:component-scan base-package="cn.edu.ccut.controller"></context:component-scan>
    <!-- 配置注解驱动，相当于配置了handlerMapping和handlerAdapter -->
    <mvc:annotation-driven/>
    <!-- 配置视图解析器 -->
    <bean id="viewResolverJsp" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="suffix" value=".jsp"/>
    </bean>
    
    <!-- 配置拦截器 -->
	<mvc:interceptors>
	    <mvc:interceptor>
	        <!-- 配置拦截器拦截请求的url -->
	        <mvc:mapping path="/blog/test"/>
	        <!-- 配置拦截器类 -->
	        <bean class="cn.edu.ccut.interceptor.TestInterceptor"></bean>
	    </mvc:interceptor>
	</mvc:interceptors>
 
</beans>